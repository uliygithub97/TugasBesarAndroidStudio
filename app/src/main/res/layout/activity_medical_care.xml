<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C99E10"
    android:orientation="vertical"
    tools:context=".MedicalCare"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medical_care"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/medical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/untuk_pengunjung_yang_memerlukan_penanganan_ekstra_dan_segera_tersedia_ambulans_gratis_berstandar_medis_yang_siaga_menuju_ke_klinik_terdekat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/ButtonBack4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:background="@drawable/back" />

    </LinearLayout>

</LinearLayout>

